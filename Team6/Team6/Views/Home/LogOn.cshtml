@model Team6.Models.Officer

@{
    ViewBag.Title = "Sign In";
}

@*<h2>Sign In</h2>
<hr />*@

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script> 
<link href="~/Content/signInPageStyle.css" rel="stylesheet" />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <!-- <h4>Sign In</h4> -->
        <!-- <hr /> -->
        @Html.ValidationSummary(true)

        <div class="signInContainer">

            <legend>Sign In</legend>
            <div class="form-group">
                @Html.LabelFor(model => model.UserName, new { @class = "control-label col-md-2 col-md-offset-3 col-sm-5" })
                <div class="col-md-2">
                    
                                        @Html.EditorFor(model => model.UserName)
                    @Html.ValidationMessageFor(model => model.UserName)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Password, new { @class = "control-label col-md-2 col-md-offset-3 col-sm-5" })
                <div class="col-md-2">
                    @Html.EditorFor(model => model.Password)
                    @Html.ValidationMessageFor(model => model.Password)
                </div>
            </div>
            @Html.HiddenFor(model => model.FirstName, new { @Value = "john" })
            @Html.HiddenFor(model => model.LastName, new { @Value = "john" })
            @Html.HiddenFor(model => model.Email, new { @Value = "john@john.com" })
            @Html.HiddenFor(model => model.Rank, new { @Value = "ChiefOfPolice" })
            @Html.HiddenFor(model => model.PhoneNumber, new { @Value = 8322574987 })
            @Html.HiddenFor(model => model.Ssn, new { @Value = 152012103 })
            <div class="form-group">
                <div class="col-md-offset-5 col-md-2 col-sm-offset-4">
                    <input type="submit" value="Sign In" class="btn btn-default" />
                </div>
            </div>

        </div>

    </div>
}

