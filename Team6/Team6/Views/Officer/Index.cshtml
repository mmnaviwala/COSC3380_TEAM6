@using Team6.helpers.enumhelper
@using Team6.Models
@model IEnumerable<Team6.Models.Officer>

@{
    ViewBag.Title = "Officers";
}


@{
    if (ViewBag.Message != null)
    {
        <h3 class="alert alert-danger">@ViewBag.Message</h3>
    }
}

<h2>All Officers</h2>
<hr />
@{
    HttpCookie cookie = Request.Cookies[FormsAuthentication.FormsCookieName];
    FormsAuthenticationTicket ticket = FormsAuthentication.Decrypt(cookie.Value);

    if (ticket.UserData == "ChiefOfPolice" || ticket.UserData == "AssistantChief")
    { 
<p>
    @Html.ActionLink("Create New Officer", "Create")
</p>
}
}
<table class="table table-condensed table-hover table-responsive table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BadgeNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rank)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EyeColor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Height)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Gender)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {

        if (ticket.Name == item.UserName)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.BadgeNumber)
                </td>
                <td>
                    @item.Rank.Value.GetDescription()
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @item.EyeColor.Value.GetDescription()
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Height)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gender)
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.OfficerID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.OfficerID })
                </td>
            </tr>

        }
        else
            if (ticket.UserData == "ChiefOfPolice" || ticket.UserData == "AssistantChief")
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.BadgeNumber)
                    </td>
                    <td>
                        @item.Rank.Value.GetDescription()
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @item.EyeColor.Value.GetDescription()
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Height)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Gender)
                    </td>
                    <td>
                        @Html.ActionLink("Details", "Details", new { id = item.OfficerID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.OfficerID })
                    </td>
                </tr>
            }
    }


</table>
