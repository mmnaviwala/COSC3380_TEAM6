@model IEnumerable<Team6.Models.Criminal>

@{
    ViewBag.Title = "Criminal Reports";
}

<h2 style="width:100%;background-color:#bcbcbc;padding:5px;text-align:center;">Criminal Reports</h2>
<br />
@{
    if (@ViewBag.Message != "")
    {
        <h3>@Html.Raw(ViewBag.Message)</h3>
    }
}

@foreach (var item in Model)
{
    <br /><hr /><br />
    <div class="row">
        <div class="col-xs-3">
            <b>Criminal ID</b>
        </div>
        <div class="col-xs-3">
            @item.CriminalID
        </div>
        <div class="col-xs-3">
            <b>First Name</b>
        </div>
        <div class="col-xs-3">
            @item.FirstName
        </div>
    </div>

    <div class="row">
        <div class="col-xs-3">
            <b>Last Name</b>
        </div>
        <div class="col-xs-3">
            @item.LastName
        </div>
        <div class="col-xs-3">
            <b>Eye Color</b>
        </div>
        <div class="col-xs-3">
            @item.EyeColor
        </div>
    </div>

    <div class="row">
        <div class="col-xs-3">
            <b>Weight</b>
        </div>
        <div class="col-xs-3">
            @item.Weight
        </div>
        <div class="col-xs-3">
            <b>Height</b>
        </div>
        <div class="col-xs-3">
            @item.Height
        </div>
    </div>

    <div class="row">
        <div class="col-xs-3">
            <b>Gender</b>
        </div>
        <div class="col-xs-3">
            @item.Gender
        </div>
        <div class="col-xs-3">
            <b>SSN</b>
        </div>
        <div class="col-xs-3">
            @item.Ssn
        </div>
    </div>

    <div class="row">
        <div class="col-xs-3">
            <b>Alias</b>
        </div>
        <div class="col-xs-3">
            @item.Alias
        </div>
        <div class="col-xs-3">
            <b>Hair Color</b>
        </div>
        <div class="col-xs-3">
            @item.HairColor
        </div>
    </div>

    <div class="row">
        <div class="col-xs-3">
            <b>Known Affiliates</b>
        </div>
        <div class="col-xs-3">
            @item.KnownAffiliates
        </div>
        <div class="col-xs-3">
            <b>Date Of Birth</b>
        </div>
        <div class="col-xs-3">
            @item.DateOfBirth
        </div>
    </div>

    <div class="row">
        <div class="col-xs-3">
            <b>Race</b>
        </div>
        <div class="col-xs-3">
            @item.Race
        </div>
        <div class="col-xs-3">
            <b>Address</b>
        </div>
        <div class="col-xs-3">
            @item.Address
        </div>
    </div>

    <div class="row">
        <div class="col-xs-3">
            <b>City</b>
        </div>
        <div class="col-xs-3">
            @item.City
        </div>
        <div class="col-xs-3">
            <b>State</b>
        </div>
        <div class="col-xs-3">
            @item.State
        </div>
    </div>

    <div class="row">
        <div class="col-xs-3">
            <b>Zip Code</b>
        </div>
        <div class="col-xs-3">
            @item.ZipCode
        </div>
        <div class="col-xs-3">
            <b>Phone Number</b>
        </div>
        <div class="col-xs-3">
            @item.PhoneNumber
        </div>
    </div>
    <div class="row">
        <div class="col-xs-3">
            <b>Misc</b>
        </div>
        <div class="col-xs-3">
            @item.misc
        </div>
    </div>


}



